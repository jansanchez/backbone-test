

h2
	border-style solid
	border-width 0 0 1px 0
	border-color #CCCCCC
	color black
	font-size 20px
	font-family 'trebuchet ms'

.white-box
	background white
	padding: 10px;

.dragger
	background #F2F3F5
	cursor: pointer;
	border: 1px dashed #E0E0E0;
	border-radius: 3px;
	padding 20px 10px 20px 10px
	margin: 0 0 15px;
	text-align: center;
	float: left
	width 98%
	.note
		font-size 1.75em
		color #666
		font-family 'lucida sans unicode'
		min-height 130px
		line-height @min-height
		width: 100%;
		float:left;
		small
			color #AAAAAA
			font-size 0.4em


.thumb
	background #FCFCFC
	cursor: pointer;
	border: 1px dashed #ddd;
	border-radius: 3px;
	height: 90px;
	width: 160px;
	margin: 20px 20px 0 0;
	float:left;
	position: relative;
	.remove
		background: url("../img/remove.png") no-repeat scroll 0 0 transparent;
		display block
		width 20px
		height 20px
		position absolute
		right -7px
		top -7px

.options
	clear:both

#demoFiler
	display none


